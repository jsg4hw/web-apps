<h1> Welcome to Cards </h1>

<%

    ranks = [2, 3, 4, 5, 6, 7, 8, 9, 10, "jack", "queen", "king", "ace"]
    suits = ["clubs", "diamonds", "hearts", "spades"]
    
    deck = []
    for rank in ranks
        for suit in suits
            card = "#{rank}_of_#{suit}"
            deck.push(card)
        end
    end
%>
<!--
<p>
   <img src="/images/cards/<%=card%>_of_<%=deck%>.svg">
  


</p>
